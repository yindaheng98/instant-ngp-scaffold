{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "stnerf2nerf",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/stnerf2nerf.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/data/nerf/walking",
            "args": [
                "--aabb_scale",
                "8",
            ]
        },
        {
            "name": "run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--load_snapshot",
                "results/stnerf-walking/frame1.bson",
                "--gui"
            ]
        },
        {
            "name": "parse_seq",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/parse_seq.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "args": [
                "--start",
                "1",
                "--end",
                "75",
                "--saveformat",
                "results/stnerf-walking/frame%d.bson",
                "--interexportformat",
                "results/stnerf-walking/frame%d-inter.npz",
                "--intraexportformat",
                "results/stnerf-walking/frame%d-intra.npz"
            ]
        },
        {
            "name": "play",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/play.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--load_snapshot",
                "results/stnerf-walking/frame1.bson",
                "--frameformat",
                "results/stnerf-walking/frame%d-inter.npz",
                "--start",
                "2",
                "--end",
                "75"
            ]
        }
    ]
}